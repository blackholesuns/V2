{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		
		"baseUrl": ".",
		"paths": {
			"$lib": ["src/library"],
			"$lib/*": ["src/library/*"],
			"$component": ["src/components"],
			"$component/*": ["src/components/*"],
			"$stores": ["src/stores"],
			"$stores/*": ["src/stores/*"],
			"$assets": ["src/assets"],
			"$assets/*": ["src/assets/*"]
		}
	}
}
