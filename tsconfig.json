{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,

		"paths": {
			"$lib": ["src/Library"],
			"$lib/*": ["src/Library/*"],
			"$component": ["src/Components"],
			"$component/*": ["src/Components/*"],
			"$stores": ["src/Stores"],
			"$stores/*": ["src/Stores/*"],
			"$assets": ["src/Assets"],
			"$assets/*": ["src/Assets/*"]
		}
	}
}
